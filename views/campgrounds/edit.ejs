<% include ../partial/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align:center;">Edit <%=camp.name%></h1>
    <div style="width: 30%; margin: 30px auto;">
       <form action="/campgrounds/<%= camp._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value="<%= camp.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" value="<%= camp.price%>"
                        min="0.01" step= "0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="img" value=<%= camp.img%>>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= camp.description%>" >
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form> 
        <a class="btn btn-sm btn-default" href="/campGrounds">Go Back</a>
    </div>
    </div>
</div>


<% include ../partial/footer %>