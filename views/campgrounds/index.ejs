<% include ../partial/header %>

<div class="container">
   <header class="jumbotron">
        <div class="container">
          <h1>Welcome To YelpCamp</h1>
            <p>View our awesome camp ground all over the world</p>
            <p>
                <a href="/campGrounds/new" class="btn btn-primary btn-lg">Add new Camp Ground</a>
            </p>  
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Camp Ground</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display: flex; flex-wrap:wrap;">
        <% campGrounds.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src=<%= camp.img %>>
                <div class="caption">
                     <h4><%= camp.name %></h4>
                </div>
                <p>
                    <a href=<%="/campGrounds/"+camp._id%> class="btn btn-primary btn-md">More Info</a>
                </p>
            </div>
        </div>
        <% }); %> 
    </div>
    
</div>


<% include ../partial/footer %>
