<% include ../partial/header %>
<h1>New Comment from!!</h1>

<div class="container">
    <div class="row">
    <h1 style="text-align:center;">Create a new Comment to <%=camp.name%></h1>
    <div style="width: 30%; margin: 30px auto;">
       <form action="/campGrounds/<%= camp._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form> 
        <a class="btn btn-sm btn-default" href="/campGrounds/<%=camp._id%>">Go Back</a>
    </div>
    </div>
</div>
<% include ../partial/footer %>